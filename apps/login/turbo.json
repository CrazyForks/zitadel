{
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "@zitadel/client#build"
      ]
    },
    "build:login:standalone": {
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": [
        "@zitadel/client#build"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "@zitadel/client#build"
      ]
    },
    "test": {
      "dependsOn": [
        "@zitadel/client#build"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "@zitadel/client#build"
      ]
    },
    "test:integration:login": {
      "inputs": [
        ".next/trace",
        "integration/integration/**",
        "integration/support/**"
      ],
      "outputs": [
        "cypress/videos/**",
        "cypress/screenshots/**"
      ],
      "with": [
        "dev"
      ]
    }
  }
}
