{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "generate": {
      "outputs": ["zitadel/**"],
      "cache": false
    },
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["@zitadel/proto#generate"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@zitadel/proto#generate"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test:unit": {
      "outputs": [],
      "cache": true,
      "dependsOn": ["@zitadel/client#build"]
    },
    "build:client:standalone": {
      "outputs": ["dist/**"],
      "dependsOn": ["@zitadel/proto#generate"]
    },
    "client:build": {
      "outputs": ["dist/**"],
      "dependsOn": ["@zitadel/proto#generate"]
    },
    "proto:generate": {
      "outputs": ["zitadel/**"],
      "cache": false
    },
    "test:integration:setup": {
      "with": ["dev"]
    },
    "test:acceptance:setup:dev": {
      "with": ["dev"]
    }
  }
}
