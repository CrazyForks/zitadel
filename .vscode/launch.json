{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Zitadel",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {
                "ZITADEL_DATABASE_POSTGRES_HOST": "${env:DEVCONTAINER_DB_HOST}",
            },
            "args": [
                 "start-from-init",
                 "--config", "${workspaceFolder}/.devcontainer/zitadel.yaml",
                 "--masterkey", "MasterkeyNeedsToHave32Characters"
            ]
        }
    ]
}