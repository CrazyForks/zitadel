{
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "check": {},
        "generate": {
            "inputs": [
                "{workspaceRoot}/proto/**/*",
                "{projectRoot}/buf.gen.yaml",
                "{projectRoot}/package.json",
                "{workspaceRoot}/pnpm-lock.yaml"
            ],
            "outputs": ["{projectRoot}/src/app/proto/generated/**/*"]
        },
        "build": {
            "inputs": [
                "default",
                "!{projectRoot}/.angular*"
            ],
            "outputs": ["{projectRoot}/dist/**/*"]
        },
        "start": {
            "dependsOn": [
                "@zitadel/login:start"
            ]
        },
        "dev": {
            "dependsOn": [
                "@zitadel/login:start"
            ]
        }
    }   
}