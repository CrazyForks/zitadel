{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "@zitadel/core",
    "projectType": "application",
    "targets": {
        "build": {
            "description": "Build the Zitadel core application",
            "command": "make core_build compile_pipeline",
            "inputs": [
                "{workspaceRoot}/cmd/**/*",
                "{workspaceRoot}/internal/**/*",
                "{workspaceRoot}/proto/**/*",
                "{workspaceRoot}/pkg/**/*",
                "{workspaceRoot}/Makefile",
                "{workspaceRoot}/go.mod",
                "{workspaceRoot}/go.sum",
                "{workspaceRoot}/main.go"
            ],
            "outputs": [
                "{workspaceRoot}/zitadel"
            ],
            "dependsOn": [
                "@zitadel/console:build"
            ]
        },
        "start-db": {
            "description": "Run the PostgreSQL database container",
            "command": "docker compose --file ./.devcontainer/docker-compose.yaml up db",
            "options": {
                "cwd": "{projectRoot}"
            },
            "continuous": true
        },
        "wait-for-db": {
            "description": "Wait until the PostgreSQL database is ready to accept connections",
            "dependsOn": [
                "start-db"
            ],
            "command": "until docker exec zitadel-postgres pg_isready -U postgres; do echo 'Waiting for PostgreSQL...'; sleep 2; done"
        },
        "start-init": {
            "description": "Initialize the Zitadel core application",
            "dependsOn": [
                "build",
                "wait-for-db"
            ],
            "options": {
                "env": {
                    "CONFIG_FILE": "{projectRoot}/zitadel.yaml"
                }
            },
            "command": "./zitadel init --config ${CONFIG_FILE}"
        },
        "start-setup": {
            "description": "Setup the Zitadel core application. This also writes the login-client.pat if run against a database from scratch",
            "dependsOn": [
                "start-init"
            ],
            "options": {
                "env": {
                    "CONFIG_FILE": "{projectRoot}/zitadel.yaml"
                }
            },
            "outputs": [
                "{workspaceRoot}/login-client.pat"
            ],
            "command": "./zitadel setup --config ${CONFIG_FILE} --steps ${CONFIG_FILE} --masterkey \"MasterkeyNeedsToHave32Characters\""
        },
        "start": {
            "description": "Start the Zitadel core application",
            "dependsOn": [
                "start-setup"
            ],
            "options": {
                "env": {
                    "CONFIG_FILE": "{projectRoot}/zitadel.yaml"
                }
            },
            "continuous": true,
            "command": "./zitadel start --config ${CONFIG_FILE} --masterkey \"MasterkeyNeedsToHave32Characters\""
        },
        "dev": {
            "description": "Develop the Zitadel core application. Like the `start` target, but can start the application yourself in debug mode using your IDE. Run `nx show project core --json | jq '.targets.start.options'` to see how to configure your IDE",
            "dependsOn": [
                "@zitadel/login:start-login-only"
            ]
        }
    }
}