{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "name": "@zitadel/core",
    "projectType": "application",
    "targets": {
        "build": {
            "description": "Build the Zitadel core application",
            "command": "make core_build compile_pipeline",
            "inputs": [
                "{workspaceRoot}/cmd/**/*",
                "{workspaceRoot}/internal/**/*",
                "{workspaceRoot}/proto/**/*",
                "{workspaceRoot}/pkg/**/*",
                "{workspaceRoot}/Makefile",
                "{workspaceRoot}/go.mod",
                "{workspaceRoot}/go.sum",
                "{workspaceRoot}/main.go"
            ],
            "outputs": [
                "{workspaceRoot}/zitadel"
            ],
            "dependsOn": [
                "@zitadel/console:build"
            ]
        },
        "init-and-setup": {
            "description": "Setup the Zitadel core application. This writes the login-client.pat if run against a database from scratch",
            "command": "nx run @zitadel/devcontainer:compose run --build --no-deps core-init core-setup",
            "outputs": [
                "{workspaceRoot}/login-client.pat"
            ]
        },
        "start": {
            "description": "Start the Zitadel core application",
            "continuous": true,
            "command": "nx run @zitadel/devcontainer:compose up --build --watch --no-deps core"
        },
        "dev": {
            "description": "Develop the Zitadel core application. Like the `start` target, but can start the application yourself in debug mode using your IDE. Run `nx show project core --json | jq '.targets.start.options'` to see how to configure your IDE",
            "dependsOn": [
                "build",
                "start-db",
                "start-init",
                "start-setup",
                "local-sa-token",
                "@zitadel/login:build",
                "@zitadel/login:start"
            ]
        }
    }
}