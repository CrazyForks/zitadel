{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": [
      "{workspaceRoot}/pnpm-lock.yaml",
      "{projectRoot}/**/*",
      "!{projectRoot}/node_modules/**/*",
      "!{projectRoot}/Dockerfile",
      "!{projectRoot}/.dockerignore"
    ],
    "docker": [
      "{projectRoot}/Dockerfile",
      "{projectRoot}/.dockerignore"
    ]
  },
  "targetDefaults": {
    "generate": {
      "cache": true
    },
    "build": {
      "cache": true,
      "dependsOn": [
        "^build",
        "generate"
      ]
    },
    "start": {
      "cache": false,
      "continuous": true,
      "dependsOn": [
        "build"
      ]
    },
    "dev": {
      "cache": false,
      "continuous": true,
      "dependsOn": [
        "^build",
        "generate"
      ]
    },
    "lint": {
      "cache": true
    },
    "test-unit": {
      "cache": true
    },
    "test-integration": {
      "cache": true
    },
    "check": {
      "dependsOn": [
        "build",
        "lint",
        "test-unit",
        "test-integration"
      ]
    }
  },
  "plugins": [
    {
      "plugin": "@nx/docker",
      "options": {
        "buildTarget": "build-docker",
        "runTarget": "start-docker"
      }
    }
  ]
}
