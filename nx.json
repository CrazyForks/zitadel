{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "workspaceLayout": {
    "libsDir": "packages"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*"
    ],
    "docker": [
      "{projectRoot}/Dockerfile",
      "{projectRoot}/.dockerignore"
    ]
  },
  "targetDefaults": {
    "generate": {
      "cache": true,
      "inputs": [
        "default"
      ]
    },
    "build": {
      "cache": true,
      "inputs": [
        "default"
      ],
      "dependsOn": [
        "^build",
        "generate"
      ]
    },
    "lint": {
      "inputs": [
        "default"
      ],
      "cache": true
    },
    "test-unit": {
      "inputs": [
        "default"
      ],
      "cache": true
    },
    "test-integration": {
      "inputs": [
        "default"
      ]
    }
  }
}
