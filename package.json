{
  "packageManager": "pnpm@10.13.1",
  "private": true,
  "name": "@zitadel/zitadel",
  "scripts": {
    "generate": "nx run-many -t generate",
    "changeset": "changeset",
    "devcontainer:lint-unit": "FAIL_COMMANDS_ON_ERRORS=true devcontainer up --prebuild --config .devcontainer/nx-lint-unit/devcontainer.json --workspace-folder .",
    "devcontainer:integration:login": "FAIL_COMMANDS_ON_ERRORS=true devcontainer up --prebuild --config .devcontainer/login-integration/devcontainer.json --workspace-folder .",
    "clean": "nx run-many -t clean",
    "clean:all": "pnpm run clean && rm -rf .nx node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@devcontainers/cli": "^0.80.0",
    "@nx/docker": "21.4.1",
    "nx": "21.4.1",
    "sass": "^1.64.1"
  }
}