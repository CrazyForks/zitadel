{
  "name": "@zitadel/docs",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "generate": {
      "outputs": [
        "{projectRoot}/docs/apis/resources/**"
      ]
    },
    "start": {
      "dependsOn": [
        "generate"
      ]
    },
    "build": {
      "outputs": [
        "{projectRoot}/build/**"
      ],
      "dependsOn": [
        "generate",
        "{workspaceRoot}/apps/api/cmd/**/*.yaml"
      ],
      "options": {
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=4096",
          "DOCUSAURUS_PERF_LOGGER": true
        }
      }
    },
    "dev": {
      "dependsOn": [
        "build"
      ]
    },
    "docker:build": {
      "dependsOn": [
        "build"
      ]
    },
    "docker:run": {
      "options": {
        "args": [
          "-p",
          "3003:3003"
        ]
      }
    }
  }
}