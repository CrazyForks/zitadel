{
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "check": {},
    "generate": {
      "dependsOn": ["^generate"],
      "outputs": ["{projectRoot}/docs/api/**/*", "{projectRoot}/docs/self-hosting/manage/configure/*.yaml"],
      "cache": true
    },
    "generate:grpc": {
      "dependsOn": ["^generate"],
      "outputs": ["{projectRoot}/docs/api/**/*"],
      "cache": true
    },
    "generate:apidocs": {
      "dependsOn": ["generate:grpc"],
      "outputs": ["{projectRoot}/docs/api/**/*"],
      "cache": true
    },
    "generate:configdocs": {
      "outputs": ["{projectRoot}/docs/self-hosting/manage/configure/*.yaml"],
      "cache": true
    },
    "build": {
      "dependsOn": ["generate"],
      "outputs": ["{projectRoot}/build/**/*"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["generate"],
      "cache": false,
      "continuous": true
    },
    "start": {
      "dependsOn": ["generate"],
      "cache": false,
      "continuous": true
    },
    "start:api": {
      "dependsOn": ["generate"],
      "cache": false,
      "continuous": true
    }
  }
}
